{
  // Let Stylelint validate the CSS and SCSS files.
  "css.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Prettier will wrap lines longer than 80 characters.
  "editor.rulers": [
    80
  ]
}